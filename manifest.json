{
  "manifest_version": 3,
  "name": "Better Copy Title And Link",
  "version": "1.0.0",
  "description": "Copy page title in various formats with keyboard shortcut",
  "permissions": ["storage", "activeTab", "scripting", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "public/icons/icon-16.png",
      "48": "public/icons/icon-48.png",
      "128": "public/icons/icon-128.png"
    },
    "default_title": "Better Copy Title And Link"
  },
  "icons": {
    "16": "public/icons/icon-16.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "commands": {
    "copy-url": {
      "description": "Copy URL only"
    },
    "copy-title": {
      "description": "Copy title only"
    },
    "copy-title-url": {
      "suggested_key": {
        "default": "Alt+K",
        "mac": "Alt+K"
      },
      "description": "Copy title and URL"
    },
    "copy-markdown": {
      "suggested_key": {
        "default": "Alt+Shift+K",
        "mac": "Alt+Shift+K"
      },
      "description": "Copy as Markdown link"
    },
    "copy-custom": {
      "description": "Copy in custom format"
    }
  }
}
